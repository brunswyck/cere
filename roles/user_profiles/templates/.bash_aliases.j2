alias pimpos="sudo apt update;sudo apt upgrade;sudo apt clean;sudo apt autoremove"
alias pimpip="pip list --outdated --format=freeze | grep -v '^\-e' | cut -d = -f 1  | xargs -n1 pip install --user -U"
alias rebootsshserver="sudo systemctl restart sshd.service"
alias apthistory="zcat -qf /var/log/apt/history.log* | grep -Po '^Commandline: apt-get install (?!.*--reinstall)\K.*'"
